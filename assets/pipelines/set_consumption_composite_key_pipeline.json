PUT _ingest/pipeline/set_consumption_composite_key
{
  "description": "Consumption Transform: Set composite_key from @timestamp and deployment_id. Set composite_tier_key from @timestamp, deployment_id and tier",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
          if (ctx.cluster_name != null) {
            ctx.deployment_id = ctx.cluster_name;
          }
          if (ctx['@timestamp'] != null) {
            ctx.composite_key = ZonedDateTime.parse(ctx['@timestamp']).toLocalDate().toString() + '_' + ctx.deployment_id;
            ctx.composite_tier_key = ctx.composite_key + '_' + ctx.tier.replace('/', '_');
          }
        """
      }
    }
  ]
}